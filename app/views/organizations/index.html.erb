<% content_for :sidebar do %>
  <% render SidebarComponent.new(controller: controller) %>
<% end %>

<% content_for :title, "Organizations" %>

<h1 class="col-span-12 font-semibold text-lg">Organizations</h1>

<div class="col-span-12 md:col-span-6 md:order-2 gap-4 flex flex-col">
  <% if @organizations.empty? %>
    <div class="card card-compact bg-base-200 shadow">
      <div class="card-body">
        <div class="flex flex-col items-center p-4 gap-4 justify-center">
          <p class="text-sm">You have not yet created an organization.</p>
          <%= link_to 'Create Organization', new_organization_path, class: 'btn btn-accent btn-sm' %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="flex flex-col items-center gap-4 my-4">
      <p class="text-sm">Manage your organizations.</p>
      <%= link_to 'Create Organization', new_organization_path, class: 'btn btn-accent btn-sm' %>
    </div>
    <%= render @organizations %>
  <% end %>
</div>
